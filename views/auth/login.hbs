<form id='login-inputs' action="/login" method="POST">
    <h1 class="text-center p-3"> Registration Form </h1>

    <div id="input-container">
        <!-- email-Id -->
        <div class="form-group row">
            <div class="col-sm-3"></div>
            <label class="col-sm-2" for="email">Email-Id</label>
            <div class="col-sm-4">
                <input class="form-control" type="text" name="email" placeholder="Enter Email">
            </div>
            <div class="col-sm-3"></div>
        </div>

        <div class="form-group row ">
            <div class="col-sm-3"></div>
            <label class="col-sm-2" for="password">Password</label>
            <div class="col-sm-4">
                <input class="form-control" type="password" name="password" placeholder="Enter password">
            </div>
            <div class="col-sm-3"></div>

        </div>


        {{!-- <label for="input-username">Email</label>
    <input type="text" id="input-email" name="email" placeholder="email" /> --}}

        {{!-- <label for="input-password">Password</label>
    <input type="password" name="password" id="input-password" placeholder="******" /> --}}

        <button class="btn btn-primary" type="submit">Login</button>

        {{#if errorMessage}}
        <p class="alert alert-danger">{{errorMessage}}</p>
        {{/if}}
</form>