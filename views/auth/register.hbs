{{!--views/auth/signup.hbs --}}

<div id="all-pgs">

  <form class="align-middle p-5 m-5" action="/register" method="POST">

    <h1 class="text-center"> Registration Form </h1>

    <!-- First Name -->
    <div class="form-group row">
      <label class="col-sm-3" for="firstname">First Name</label>
      <div class="col-sm-6">
        <input class="form-control" type="text" name="firstname" placeholder="Enter First name">
      </div>
    </div>

    <!-- Last Name -->
    <div class="form-group row ">
      <label class="col-sm-3" for="lastname">Last Name</label>
      <div class="col-sm-6">
        <input class="form-control" type="text" name="lastname" placeholder="Enter Last name">
      </div>
    </div>

    <!-- EmailID -->
    <div class="form-group row ">
      <label class="col-sm-3" for="email">E-mail Address <span> * </span> </label>
      <div class="col-sm-6">
        <input class="form-control" type="text" name="email" placeholder="Email Address">
      </div>
    </div>


    <!-- Password  -->
    <div class="form-group row ">
      <label class="col-sm-3" for="password">Password</label>
      <div class="col-sm-6">
        <input class="form-control" type="password" name="password" placeholder="Enter password">
      </div>
    </div>


    <!-- retype password  -->
    <div class="form-group row ">
      <label class="col-sm-3" for="rePassword">Retype Password</label>
      <div class="col-sm-6">
        <input class="form-control" type="password" name="rePassword" placeholder="Confirm Password">
      </div>
    </div>


    <!-- Address -->
    <div class="form-group row ">
      <label class="col-sm-3" for="address">Address</label>
      <div class="col-sm-6">
        <input class="form-control" type="text-area" name="address" placeholder="Enter Full Address">
      </div>
    </div>


    <!-- Phone number -->
    <div class="form-group row ">
      <label class="col-sm-3" for="phone">Phone Number</label>
      <div class="col-sm-6">
        <input class="form-control" type="text" name="phone" placeholder="Enter Phone Number">
      </div>
    </div>

    <div class="form-group row align-middle">
      <button type="submit" class="btn btn-primary">Register</button>
    </div>

    {{#if errorMessage}}
    <p class="alert alert-danger">{{errorMessage}}</p>
    {{/if}}

  </form>
</div>