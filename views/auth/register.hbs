{{!--views/auth/signup.hbs --}}

  <form  action="/register" method="POST">

    <h1 class="text-center p-3"> Registration Form </h1>

  <div id="input-container">
    <!-- First Name -->
    <div class="form-group row">
      <div class="col-sm-3"></div>
      <label class="col-sm-2" for="firstname">First Name</label>
      <div class="col-sm-4">
        <input class="form-control" type="text" name="firstname" placeholder="Enter First name">
      </div>
      <div class="col-sm-3"></div>

    </div>

    <!-- Last Name -->
    <div class="form-group row ">
    <div class="col-sm-3"></div>

      <label class="col-sm-2" for="lastname">Last Name</label>
      <div class="col-sm-4">
        <input class="form-control" type="text" name="lastname" placeholder="Enter Last name">
      </div>
      <div class="col-sm-3"></div>
    </div>

    <!-- EmailID -->
    <div class="form-group row ">
          <div class="col-sm-3"></div>

      <label class="col-sm-2" for="email">E-mail Address <span> * </span> </label>
      <div class="col-sm-4">
        <input class="form-control" type="text" name="email" placeholder="Email Address">
      </div>
          <div class="col-sm-3"></div>

    </div>


    <!-- Password  -->
    <div class="form-group row ">
                <div class="col-sm-3"></div>

      <label class="col-sm-2" for="password">Password</label>
      <div class="col-sm-4">
        <input class="form-control" type="password" name="password" placeholder="Enter password">
      </div>
                <div class="col-sm-3"></div>

    </div>


    <!-- retype password  -->
    <div class="form-group row ">
                <div class="col-sm-3"></div>

      <label class="col-sm-2" for="rePassword">Retype Password</label>
      <div class="col-sm-4">
        <input class="form-control" type="password" name="rePassword" placeholder="Confirm Password">
      </div>
                <div class="col-sm-3"></div>

    </div>


    <!-- Address -->
    <div class="form-group row ">
                <div class="col-sm-3"></div>

      <label class="col-sm-2" for="address">Address</label>
      <div class="col-sm-4">
        <input class="form-control" type="text-area" name="address" placeholder="Enter Full Address">
      </div>
                <div class="col-sm-3"></div>

    </div>


    <!-- Phone number -->
    <div class="form-group row ">
                <div class="col-sm-3"></div>

      <label class="col-sm-2" for="phone">Phone Number</label>
      <div class="col-sm-4">
        <input class="form-control" type="text" name="phone" placeholder="Enter Phone Number">
      </div>
                <div class="col-sm-3"></div>

    </div>

          

    <div class="form-group row align-middle">
      <div class="col-sm-5"></div>
      <button type="submit" class="btn btn-primary col-sm-2 m-3">Register</button>
      <div class="col-sm-5"></div>
    </div>

    {{#if errorMessage}}
    <p class="alert alert-danger">{{errorMessage}}</p>
    {{/if}}

  </div>
  </form>
